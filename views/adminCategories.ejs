<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#" style="font-weight: bold"
          >Управление категориями</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link"
                href="/dashboard"
                style="color: red; font-weight: bold; font-size: 20px"
                >Назад</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <main style="margin-top: 20px">
        <form action="/categories/create" method="post" class="mb-4">
          <div class="mb-3">
            <label
              for="newCategory"
              class="form-label"
              style="font-weight: bold"
              >Категория:</label
            >
            <input
              type="text"
              class="form-control"
              id="newCategory"
              name="newCategory"
              required
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary"
            style="font-weight: bold"
          >
            Создать категория
          </button>
        </form>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% categories.forEach(category => { %>
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= category.category %></h5>
                <button
                  type="button"
                  class="btn btn-primary"
                  style="font-weight: bold"
                  data-bs-toggle="modal"
                  data-bs-target="#editModal<%= category._id %>"
                >
                  Редактировать
                </button>
                <button
                  type="button"
                  class="btn btn-danger"
                  style="font-weight: bold"
                  onclick="deleteCategory('<%= category._id %>')"
                >
                  Удалить
                </button>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
        <br />
        <!-- Edit Modal -->
        <% categories.forEach(category => { %>
        <div
          class="modal fade"
          id="editModal<%= category._id %>"
          tabindex="-1"
          aria-labelledby="editModalLabel<%= category._id %>"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5
                  class="modal-category"
                  id="editModalLabel<%= category._id %>"
                  style="font-weight: bold"
                >
                  Редактировать категория
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <form
                action="/categories/update/<%= category._id %>"
                method="post"
              >
                <div class="modal-body">
                  <div class="mb-3">
                    <label
                      for="updatedCategory"
                      class="form-label"
                      style="font-weight: bold"
                      >Обновленное категория:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="updatedCategory"
                      name="updatedCategory"
                      value="<%= category.category %>"
                      required
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="submit"
                    class="btn btn-primary"
                    style="font-weight: bold"
                  >
                    Сохранить изменения
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function deleteCategory(categoryId) {
        Swal.fire({
          title: "Вы уверены?",
          text: "Вы действительно хотите удалить этот категория?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Да, удалить!",
          cancelButtonText: "Отмена",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = `/categories/delete/${categoryId}`;
          }
        });
      }
    </script>
  </body>
</html>
